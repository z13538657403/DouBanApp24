<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_sl"
    android:background="@drawable/selector_list_item"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_of_song"
        android:layout_width="@dimen/avatar_size_m"
        android:layout_height="@dimen/avatar_size_m"
        pi:roundedCornerRadius="5dp"
        android:src="@drawable/ic_place_holder"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="9dip"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_of_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="null"
            android:singleLine="true"
            android:ellipsize="end"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/name_of_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_of_song"
            android:layout_marginTop="4dp"
            android:textSize="13sp"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/defaultTextColor"
            android:text="null" />

    </RelativeLayout>

</LinearLayout>