<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/heightqing</item>
        <item name="colorPrimaryDark">@color/heightqing</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
    </style>

    <style name="search_view">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@drawable/select_search_view</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="cardViewStyle" parent="Base.CardView">
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginBottom">7dp</item>
    </style>

    <style name="cardViewStyle2" parent="Base.CardView">
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="customTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/heightqing</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/customTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/black</item>

    </style>

    <style name="customTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ToolBar_Style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionOverflowButtonStyle">@style/TooBar_Overflow_Style</item>
    </style>

    <style name="TooBar_Overflow_Style" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_menu_more_overflow</item>
    </style>

    <style name="pop_window_anim">
        <item name="android:windowEnterAnimation">@anim/show_down</item>
        <item name="android:windowExitAnimation">@anim/hide_up</item>
    </style>

    <style name="tv_m_yellow_sl">
        <item name="android:textSize">@dimen/txt_m</item>
        <item name="android:textColor">@color/cw_yellow</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="tv_m_blue_sl">
        <item name="android:textSize">@dimen/txt_m</item>
        <item name="android:textColor">@color/cw_blue</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="tv_m_grey_sl">
        <item name="android:textSize">@dimen/txt_m</item>
        <item name="android:textColor">@color/cw_grey</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="tv_m_black_sl">
        <item name="android:textSize">@dimen/txt_m</item>
        <item name="android:textColor">@color/cw_black</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="et_grey_hint_black_txt_bg_white">
        <item name="android:textSize">@dimen/txt_m</item>
        <item name="android:textColor">@color/cw_black</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/cw_grey</item>
        <item name="android:background">@color/cw_white</item>
    </style>

    <style name="ActionSheetStyleiOS7">
        <item name="actionSheetBackground">@android:color/transparent</item>
        <item name="cancelButtonBackground">@drawable/slt_as_ios7_cancel_bt</item>
        <item name="otherButtonTopBackground">@drawable/slt_as_ios7_other_bt_top</item>
        <item name="otherButtonMiddleBackground">@drawable/slt_as_ios7_other_bt_middle</item>
        <item name="otherButtonBottomBackground">@drawable/slt_as_ios7_other_bt_bottom</item>
        <item name="otherButtonSingleBackground">@drawable/slt_as_ios7_other_bt_single</item>
        <item name="cancelButtonTextColor">@color/defaultTextColor</item>
        <item name="otherButtonTextColor">@color/defaultTextColor</item>
        <item name="actionSheetPadding">10dp</item>
        <item name="otherButtonSpacing">0dp</item>
        <item name="cancelButtonMarginTop">7dp</item>
        <item name="actionSheetTextSize">14sp</item>
    </style>

</resources>
